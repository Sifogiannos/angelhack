<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name = "viewport"  content="minimal-ui width=device-width, user-scalable=no, initial-scale=1.0,maximum-scale=1.0">
    <meta name = "msapplication-tap-highlight" content="no">
    <title>Stranded | Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/main-theme.css">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
  </head>

  <body>
  	<section class="fullscreen background-image">
  		<section class="logo">
  			<img src="/img/logo_transparent_white@2.png" alt="Stranded logo">
  		</section>
  		<section class="login-form">
  			<form action="/login" method="post">
	  			<div class="input with-icon">
	  				<i class="fa fa-user white-color"></i>
	  				<input type="text" class="white-color" name="username" placeholder="Username">
	  			</div>
	  			<div class="input with-icon">
	  				<i class="fa fa-lock white-color"></i>
	  				<input type="password" class="white-color" name="password" placeholder="Password">
	  			</div>
	  			<button type="submit" class="button button-big button-rounded bg-prm-color">Sign in</button>
	  			<a href="/auth/linkedin" class="button button-big button-rounded bg-linkedin-color"><i class="fa fa-linkedin"></i> Sign in using linkedin</a>
  			</form>
  		</section>
  		<footer class="footer-bottom">
  			<p>Dont have an account? <a href="/signup" class="prm-color">Sign up</a></p>
  		</footer>
  	</section>
  </body>

</html>
